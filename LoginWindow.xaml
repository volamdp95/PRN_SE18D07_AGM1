<Window x:Class="NguyenVanCau_SE18D07_A01.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="250" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Email:" FontWeight="Bold" />
            <TextBox x:Name="txtEmail" Margin="0,5" TextChanged="txtEmail_TextChanged_1" Text="nva@gmail.com" />

            <TextBlock Text="Password:" FontWeight="Bold" Margin="0,10,0,0"/>
            <PasswordBox x:Name="txtPassword" Margin="0,5" Password="123" />

            <Button Content="Login"
                    Click="Login_Click"
                    Width="100"
                    Height="30"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0" />
        </StackPanel>
    </Grid>
</Window>
