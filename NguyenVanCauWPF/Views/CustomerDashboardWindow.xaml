<Window x:Class="NguyenVanCau_SE18D07_A01.Views.CustomerDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Dashboard" Height="500" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Background="#EEE" Margin="10" Grid.Column="0">
            <TextBlock Text="Customer Panel" FontWeight="Bold" FontSize="16" Margin="0 0 0 10"/>
            <Button Content="Book Room" Margin="0 0 0 5" Click="btnBookRoom_Click"/>
            <Button Content="Book History" Margin="0 0 0 5" Click="btnHistory_Click"/>
            <Button Content="Profile" Margin="0 0 0 5" Click="btnProfile_Click"/>


        </StackPanel>

        <!-- Content Frame -->
        <Frame x:Name="mainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
