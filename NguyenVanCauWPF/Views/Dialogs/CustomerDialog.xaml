<Window x:Class="NguyenVanCau_SE18D07_A01.Views.Dialogs.CustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CustomerDialog" Height="350" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Full Name" />
            <TextBox x:Name="txtFullName" />
            <TextBlock Text="Phone" />
            <TextBox x:Name="txtPhone" />
            <TextBlock Text="Email" />
            <TextBox x:Name="txtEmail" />
            <TextBlock Text="Birthday" />
            <DatePicker x:Name="dpBirthday" />
            <TextBlock Text="Password" />
            <PasswordBox x:Name="txtPassword" />
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Button Content="OK" Width="75" Margin="0,0,10,0" Click="Ok_Click"/>
                <Button Content="Cancel" Width="75" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
