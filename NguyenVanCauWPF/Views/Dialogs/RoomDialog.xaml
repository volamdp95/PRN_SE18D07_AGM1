<Window x:Class="NguyenVanCau_SE18D07_A01.Views.Dialogs.RoomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Room Dialog" Height="300" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Room Number:" />
            <TextBox x:Name="txtRoomNumber" Margin="0,5"/>

            <TextBlock Text="Description:" />
            <TextBox x:Name="txtDescription" Margin="0,5"/>

            <TextBlock Text="Max Capacity:" />
            <TextBox x:Name="txtCapacity" Margin="0,5"/>

            <TextBlock Text="Price per Date:" />
            <TextBox x:Name="txtPrice" Margin="0,5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="0,10,0,0">
            <Button Content="Save" Width="80" Margin="5" Click="btnSave_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
