<Page x:Class="NguyenVanCau_SE18D07_A01.Views.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Profile">

    <Grid Margin="30">
        <StackPanel Width="300">
            <TextBlock Text="My Profile" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <Label Content="Full Name"/>
            <TextBox x:Name="txtFullName"/>

            <Label Content="Email"/>
            <TextBox x:Name="txtEmail"/>

            <Label Content="Password"/>
            <PasswordBox x:Name="txtPassword"/>

            <Label Content="Phone"/>
            <TextBox x:Name="txtPhone"/>

            <Label Content="Birthday"/>
            <DatePicker x:Name="dpBirthday"/>

            <Button Content="Update Profile" Width="150" Height="35" Margin="0,20,0,0" Click="btnUpdate_Click"/>
            <Button Content="Check Information"
        Width="150" Height="35"
        Margin="0,10,0,0"
        Click="btnCheck_Click"/>
        </StackPanel>
    </Grid>
</Page>