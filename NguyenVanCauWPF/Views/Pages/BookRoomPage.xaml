<Page x:Class="NguyenVanCau_SE18D07_A01.Views.Pages.BookRoomPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Book Room">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,20,0,10">
            <TextBlock Text="Book a Room" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10" >
                <StackPanel Margin="10">
                    <TextBlock Text="From Date" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <DatePicker x:Name="dpFrom" Width="150"/>
                </StackPanel>

                <StackPanel Margin="10">
                    <TextBlock Text="To Date" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <DatePicker x:Name="dpTo" Width="150"/>
                </StackPanel>
            </StackPanel>

            <Button Content="Check Available Rooms"
                    Width="200" Height="40"
                    HorizontalAlignment="Center"
                    Click="btnCheck_Click"
                    Background="#0078D7" Foreground="White"
                    FontWeight="Bold" Margin="0,10,0,0"/>
        </StackPanel>

        <DataGrid x:Name="dgAvailableRooms"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  Margin="20"
                  CanUserAddRows="False"
                  RowHeight="35"
                  FontSize="14">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Room #" Binding="{Binding RoomNumber}" Width="*"/>
                <DataGridTextColumn Header="Type" Binding="{Binding RoomTypeName}" Width="*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding RoomDescription}" Width="2*"/>
                <DataGridTextColumn Header="Price" Binding="{Binding PriceDisplay}" Width="*"/>
                <DataGridTemplateColumn Header="Action" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Book"
                        Background="#28A745"
                        Foreground="White"
                        Padding="5,2"
                        Click="btnBook_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
