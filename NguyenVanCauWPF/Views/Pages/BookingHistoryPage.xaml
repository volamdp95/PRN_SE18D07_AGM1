<Page x:Class="NguyenVanCau_SE18D07_A01.Views.Pages.BookingHistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Booking History">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Booking History"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <TextBlock x:Name="txtNoBooking"
                       Text="⚠ Chưa có đặt phòng nào!"
                       FontStyle="Italic"
                       Foreground="Gray"
                       Margin="0,0,0,10"
                       Visibility="Collapsed" />

            <DataGrid x:Name="dgHistory"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          Height="300"
          Visibility="Visible">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Room" Binding="{Binding RoomNumber}" Width="100"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding RoomTypeName}" Width="120"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding RoomDescription}" Width="200"/>
                    <DataGridTextColumn Header="From" Binding="{Binding StartDate, StringFormat=dd/MM/yyyy}" Width="120"/>
                    <DataGridTextColumn Header="To" Binding="{Binding EndDate, StringFormat=dd/MM/yyyy}" Width="120"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding TotalPrice, StringFormat=N0}" Width="100"/>

                    <DataGridTemplateColumn Header="Action" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Cancel"
                                        Background="#D9534F"
                                        Foreground="White"
                                        Padding="5,2"
                                        Click="btnCancel_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
