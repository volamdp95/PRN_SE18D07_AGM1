<Page x:Class="NguyenVanCau_SE18D07_A01.Views.Pages.ReportStatisticPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ReportStatisticPage">

    <Grid Margin="20">
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Label Content="Start Date:" VerticalAlignment="Center" Margin="5"/>
            <DatePicker x:Name="dpStartDate" Width="140" Margin="5"/>
            <Label Content="End Date:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <DatePicker x:Name="dpEndDate" Width="140" Margin="5"/>
            <Button Content="Generate" Width="100" Height="35" Margin="10,0,0,0" Click="btnGenerate_Click"/>
        </StackPanel>

        <DataGrid x:Name="dgReport"
                  AutoGenerateColumns="False"
                  Margin="0,60,0,0"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  RowHeight="30"
                  FontSize="13">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Room" Binding="{Binding RoomNumber}" Width="120"/>
                <DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}" Width="200"/>
                <DataGridTextColumn Header="Booking Date" Binding="{Binding BookingDate, StringFormat=dd/MM/yyyy}" Width="150"/>
                <DataGridTextColumn Header="Total Price" Binding="{Binding TotalPrice}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
