<Window x:Class="NguyenVanCau_SE18D07_A01.Views.AdminDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard" Height="500" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Background="#EEE" Margin="10" Grid.Column="0">
            <TextBlock Text="Admin Panel" FontWeight="Bold" FontSize="16" Margin="0 0 0 10"/>
            <Button Content="Customer Management" Margin="0 0 0 5" Click="btnCustomerManagement_Click"/>
            <Button Content="Room Management" Margin="0 0 0 5" Click="btnRoomManagement_Click"/>
            <Button Content="Report Statistics" Margin="0 0 0 5" Click="btnReports_Click"/>

        </StackPanel>

        <!-- Main Frame -->
        <Frame x:Name="mainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
